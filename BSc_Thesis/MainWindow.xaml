<Window x:Class="BSc_Thesis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSc_Thesis"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Port:"/>
                <Label Grid.Row="0" Grid.Column="1" Content="BitRate:"/>
                <Label Grid.Row="0" Grid.Column="2" Content="DataBits:"/>
                <Label Grid.Row="0" Grid.Column="3" Content="StopBits:"/>
                <Label Grid.Row="0" Grid.Column="4" Content="Handshake:"/>
                <Label Grid.Row="0" Grid.Column="5" Content="DTR?"/>
                <Label Grid.Row="0" Grid.Column="6" Content="Parity:"/>
                <ComboBox Name="Combo" Grid.Row="1"/>
                <xctk:IntegerUpDown Text="{Binding RelativeSource={RelativeSource Self}, Path=Value}"  DefaultValue="9600" DataObject.Pasting="myUpDownControl_Pasting"  PreviewTextInput="myUpDownControl_PreviewTextInput" Grid.Column="1" Grid.Row="1" Name="bitrateUpDownControl" />
                <xctk:IntegerUpDown Text="{Binding RelativeSource={RelativeSource Self}, Path=Value}" DefaultValue="8" DataObject.Pasting="myUpDownControl_Pasting"  PreviewTextInput="myUpDownControl_PreviewTextInput" Grid.Column="2" Grid.Row="1" Name="databitsUpDownControl"/>
                <ComboBox Grid.Column="3" Grid.Row="1" Name="StopBitsCombo"/>
                <ComboBox Name="HandShakeCombo" Grid.Column="4" Grid.Row="1"/>
                <CheckBox Name="DtrCheckBox" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" Grid.Row="1"/>
                <ComboBox Name="ParityCombo" Grid.Column="6" Grid.Row="1"/>
            </Grid>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="RefreshPort" Grid.Column="1" Click="RefreshPort_Click" Content="Refresh Port"/>
                <Button Name="TurnOffPort" Grid.Column="1" Click="TurnOffComListening" Content="Turn off Listening"/>
                <Button Name="TurnOnPort" Grid.Column="0" Click="TurnOnComListening" Width="Auto" Content="Turn on Listening"/>
            </StackPanel>
            
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type ComboBox}">
                    <Setter Property="Grid.Column" Value="1"/>
                </Style>
            </Grid.Resources>
            <Label HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0">Odbieranie Dźwięku</Label>
            <TextBlock HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" TextWrapping="Wrap" Text="Capture Device"/>
            <ComboBox Grid.Row="1" ItemsSource="{Binding CaptureDevices}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"  VerticalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="Sample Rate" VerticalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="3" TextWrapping="Wrap" Text="Bit Depth" VerticalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="4" TextWrapping="Wrap" Text="Channel Count" VerticalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Grid.Row="5" TextWrapping="Wrap" Text="Sample Type" VerticalAlignment="Center"/>
            <ComboBox  Grid.Row="5" SelectedIndex="{Binding SampleTypeIndex, Mode=TwoWay}" VerticalAlignment="Center">
                <TextBlock><Run Text="IEEE Float"/></TextBlock>
                <TextBlock><Run Text="PCM"/></TextBlock>
            </ComboBox>
            <TextBox Height="23" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="{Binding SampleRate, Mode=TwoWay}" VerticalAlignment="Center"/>
            <TextBox Height="23" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="{Binding BitDepth, Mode=TwoWay}" IsEnabled="{Binding IsBitDepthConfigurable}" VerticalAlignment="Center"/>
            <TextBox Height="23" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Text="{Binding ChannelCount, Mode=TwoWay}" VerticalAlignment="Center"/>
        </Grid>

        <!-- Odbieranie tekstu -->
        <Label HorizontalAlignment="Center" Grid.Row="1">Odbieranie tekstu</Label>
        <TextBox IsReadOnly="True" Name="textBox" Grid.Row="1" HorizontalAlignment="Stretch" Height="236" Margin="10,23,10,10" Text="1243" TextWrapping="Wrap" VerticalAlignment="Top" Width="Auto"/>
    </Grid>
</Window>
