<Window x:Class="BSc_Thesis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSc_Thesis"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" >Odbieranie tekstu</Label>
        <Label HorizontalAlignment="Center"  Grid.Column="1">Odbieranie Dźwięku</Label>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Port:"/>
                <Label Grid.Row="0" Grid.Column="1" Content="BitRate:"/>
                <Label Grid.Row="0" Grid.Column="2" Content="DataBits:"/>
                <Label Grid.Row="0" Grid.Column="3" Content="StopBits:"/>
                <Label Grid.Row="0" Grid.Column="4" Content="Handshake:"/>
                <Label Grid.Row="0" Grid.Column="5" Content="DTR?"/>
                <Label Grid.Row="0" Grid.Column="6" Content="Parity:"/>
                <ComboBox Name="Combo" Grid.Row="1" ItemsSource="{Binding itemsCom}"/>
                <xctk:IntegerUpDown DataObject.Pasting="myUpDownControl_Pasting"  PreviewTextInput="myUpDownControl_PreviewTextInput" Grid.Column="1" Grid.Row="1" Name="bitrateUpDownControl" />
                <xctk:IntegerUpDown DataObject.Pasting="myUpDownControl_Pasting"  PreviewTextInput="myUpDownControl_PreviewTextInput" Grid.Column="2" Grid.Row="1" Name="databitsUpDownControl"/>
                <xctk:IntegerUpDown DataObject.Pasting="myUpDownControl_Pasting"  PreviewTextInput="myUpDownControl_PreviewTextInput" Grid.Column="3" Grid.Row="1" Name="stopbitsUpDownControl"/>
                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" Grid.Row="1"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Name="TurnOnPort" Grid.Column="0" Click="TurnOnComListening" Width="Auto">Turn on Listening</Button>
                <Button Name="TurnOffPort" Grid.Column="1" Click="TurnOffComListening" Content="Turn off Listening"  Width="Auto"/>
            </Grid>
            <TextBox Name="textBox" Grid.Row="0" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Grid>
</Window>
